{
  "name": "node-hmr-esm",
  "version": "0.1.0",
  "exports": {
    ".": {
      "types": "./src/index.client.ts",
      "default": "./lib/index.mjs"
    },
    "./backend": {
      "types": "./src/index.backend.ts",
      "default": "./lib/backend.mjs"
    }
  },
  "sideEffects": false,
  "files": [
    "lib/**/*",
    "src/**/*"
  ],
  "license": "MIT",
  "scripts": {
    "eslint": "eslint --cache --no-error-on-unmatched-pattern --max-warnings 20 'src/**/*.{js,jsx,ts,tsx,mjs}'",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "dev": "npx rollup -c rollup.config.js --watch",
    "build": "npx rollup -c rollup.config.js",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "enhanced-resolve": "^5.15.0",
    "esbuild": "^0.19.4",
    "fast-glob": "^3.3.1"
  },
  "devDependencies": {
    "@tooling/eslint-config": "*",
    "@tooling/rollup-config": "*",
    "@tooling/typescript-config": "*",
    "@types/node": "^18.18.1"
  }
}
